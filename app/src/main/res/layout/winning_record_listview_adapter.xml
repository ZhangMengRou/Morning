<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/white_node_card"
    android:padding="15dp">
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/green_node"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:id="@+id/textView5"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:id="@+id/winning_record_week"
        android:layout_toRightOf="@+id/textView5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周："
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:id="@+id/textView6"
        android:layout_toRightOf="@+id/winning_record_week" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未中奖"
        android:textColor="@color/colorMain"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:id="@+id/winning_record_win"
        android:layout_toRightOf="@+id/textView6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorMain"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/serial_number_num"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:id="@+id/textView3" />

</RelativeLayout>